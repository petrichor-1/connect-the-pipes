		# set_text(to: Self.‚Ü©Ô∏ètile, color: h(0,s:0,b:0))
		x_position = origin_position_x + tile_size * x
		y_position = origin_position_y + tile_size * y
		wait(seconds: 0)
		aspect_ratio = Self.height / Self.width
		set_width(tile_size * Self.üì∫width_multiplier, height: aspect_ratio * tile_size * Self.üì∫height_multiplier)
		set_position(to_x: x_position + tile_size * Self.üì∫offset_radius * cos(Self.üì∫offset_angle), y: y_position + tile_size * Self.üì∫offset_radius * sin(Self.üì∫offset_angle))
		repeat_forever:
